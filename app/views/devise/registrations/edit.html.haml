- content_for :jumbotron do
  = t 'users.edit_account'
.col-md-4
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
    = devise_error_messages!
    .field
      .input-group
        %span.input-group-addon=t 'users.email'
        = f.email_field :email, :autofocus => true, class: 'form-control'
    .field
      .input-group
        %span.input-group-addon=t 'users.password'
        = f.password_field :password, :autocomplete => "off", class: "form-control"
      %i (#{t('users.leave_blank')})
    .field
      .input-group
        %span.input-group-addon=t 'users.password_confirmation'
        = f.password_field :password_confirmation, class: 'form-control'
    .field
      .input-group
        %span.input-group-addon=t 'users.current_password'
        = f.password_field :current_password, class: 'form-control'
      %i (#{t('users.confirm_current_password')})
      
    .field= f.submit t('update'), class: 'btn btn-primary'
