- content_for :jumbotron do
  = ENV["BLOG_TITLE"]
.col-md-8.content
  - if @posts.empty?
    = t 'posts.empty_collection'
  - else
    = render linkable_title(@posts)
  .pagination-control
    = will_paginate @posts, renderer: BootstrapPagination::Rails
.col-md-4.sidebar
  = render 'layouts/sidebar'
- content_for :body_js do
  = render 'disqus_count'